<%= form_with(model: @label, local: true) do |form| %>
  <% if @label.errors.any? %>
    <div id = "error_explanation">
      <h2><%= @label.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @label.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class = "label_category">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>
  <%= form.submit %>
<% end %>